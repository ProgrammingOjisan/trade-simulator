<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom">
    <a href="/" class="navbar-brand">Trade Simulator</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navmenu">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navmenu">
        <div class="navbar-nav mr-auto">
         <!--メニュー右揃え用ブロック要素 -->
        </div>
        <div class="navbar-nav">
            <% if logged_in? %>
                <%= link_to "How to use", root_path, onclick: "localStorage.removeItem('visited');", class: "nav-item nav-link" %>
                <%= link_to "Conditions", conditions_path, class: "nav-item nav-link" %>
                <%= link_to "Users", users_path, class: "nav-item nav-link" %>
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-controls="dropdownmenu" aria-expanded="false">
                        <%= current_user.name %>
                    </a> 
                    <div class="dropdown-menu dropdown-menu-right p-3" id="dropdownmenu">
                        <%= link_to "MyPage", user_path(current_user), class: "derodown-item" %>
                        <div class="dropdown-divider"></div>
                        <%= link_to "Logout", logout_path, method: :delete, class: "derodown-item" %>
                    </div>
                </div>                
            <% else %>
                <%= link_to "How to use", root_path, onclick: "localStorage.removeItem('visited');", class: "nav-item nav-link" %>
                <%= link_to "Conditions", conditions_path, class: "nav-item nav-link" %>
                <%= link_to "Users", users_path, class: "nav-item nav-link" %>
                <%= link_to "Login", login_path, class: "nav-item nav-link" %>
            <% end %>
        </div>
    </div>
    </nav>
</header>