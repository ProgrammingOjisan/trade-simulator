<h1><%= @user.name%>'s page</h1>
<div class="row">
    <aside class="col-sm-3">
        <div class="card">
            <img class="card-img-top" src="<%= gravatar_url(@user, size: 300) %>" alt="">
            <div class="card-body">
                <h5 class="card-title">
                    <%= @user.name%>
                </h5>
                <p class="text-muted">Joined at <%= @user.created_at.strftime("%Y-%m-%d") %></p>
            </div>
        </div>
    </aside>
    <main class="col-sm-9 bg-danger">
        after creating favorite
    </main>
</div>