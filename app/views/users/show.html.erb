<h1><%= @user.name%>'s page</h1>
<div class="row">
    <aside class="col-sm-3 m-0">
        <div class="card">
            <div class="p-4">
                <img class="card-img-top rounded-circle img-border" src="<%= gravatar_url(@user, size: 300) %>" alt="">
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    <%= @user.name%>
                </h5>
                <p class="text-muted">Joined on <%= @user.created_at.strftime("%Y-%m-%d") %></p>
            </div>
        </div>
    </aside>
    <main class="col-sm-9 pl-3 m-0">
        <%= render "conditions/conditions", conditions: @favoritings, column: 2 %>
    </main>
</div>