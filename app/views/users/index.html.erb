<h1>Users index</h1>
<% if @users.any? %>
    <div class="row">
        <% @users.each do |user| %>
            <div class="col-sm-3 px-3 pb-3">
                <div class="card">
                    <div class="p-4">
                        <img class="card-img-top rounded-circle img-border" src="<%= gravatar_url(user, size: 300) %>" alt="">
                    </div>
                    <div class="card-body px-25">
                        <h5 class="card-title">
                            <%= user.name%>
                        </h5>
                        <p class="text-muted">Joined on <%= user.created_at.strftime("%Y-%m-%d") %></p>
                        <%= link_to "show detail", user_path(user), class: "btn btn-secondary btn-block" %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% end %>

<%= paginate @users%>