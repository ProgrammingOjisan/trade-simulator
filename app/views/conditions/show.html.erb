<h1>Condition edit</h1>
        <%= form_with(model: @condition, local: true) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
    
            <div class="form-group">
                    <%= f.label :stock_id, "stock_id" %>
                    <%= f.number_field :stock_id, class: "form-control", in: -1..10000, step: 1 %>
            </div>
    
            <div class="form-group">
                    <%= f.label :buy_condition, "buy_condition" %>
                    <%= f.number_field :buy_condition, class: "form-control", in: -100..100, step: 0.1 %>
            </div>
    
            <div class="form-group">
                    <%= f.label :sell_condition, "sell_condition" %>
                    <%= f.number_field :sell_condition, class: "form-control", in: -100..100, step: 0.1 %>
            </div>
    
            <div class="form-group">
                    <%= f.label :duration, "Confirmation" %>
                    <%= f.number_field :duration, class: "form-control", in: 1..10000, step: 1 %>
            </div>
    
            <%= f.submit "PREVIEW", class: "btn btn-primary btn-block", name: "preview" %>
        
            <% if @preview_mode %>
                <div>
                    <% if @results %>
                        <% @results.each_with_index do |result, i| %>
                            <p>valuation<%= i %> = <%= result %></p>
                        <% end %>
                    <% end %>
                </div>
                <%= f.submit "SAVE", class: "btn btn-primary btn-block" %>
            <% end %>

        <% end %>
